<div class = "card card-body">
    <h3> Edit shoes</h3>

    <form action="/shoes/{{shoe.id}}?_method=PUT" enctype="multipart/form-data" method="post">
    
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
        <label for = "name">Name</label>
        <input type="file"  class="form-control" name="img"   value="{{shoe.img}}" required>
        </div>
        <div class="form-group">
        <label for = "name">Name</label>
        <input type="text"  class="form-control" name="name"   value="{{shoe.name}}" required>
        </div>

        <div class="form-group">
        <label for = "description">Description</label>
        <input type="text"  class="form-control" name="description"value=" {{shoe.description}}"required>
        </div>

