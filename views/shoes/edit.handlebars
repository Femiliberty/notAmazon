        <label for = "sizes">Size</label>
        <input type="text"  class="form-control" name="size" value="{{shoe.size}}"required>
        </div>

        <div class="form-group">
        <label for = "price">Price</label>
        <input type="text"  class="form-control" name="price" value="{{shoe.price}}" required>
        </div>
        <button type="submit" class="btn
        btn-primary">Hit Me</button>
   
    </form>
</div>